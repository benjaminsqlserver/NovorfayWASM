{
  "access": [
    "Authenticated"
  ],
  "components": [
    {
      "components": [
        {
          "components": [
            {
              "class": "col-md-12",
              "components": [
                {
                  "components": [
                    {
                      "components": [
                        {
                          "class": "col-md-3",
                          "components": [
                            {
                              "component": "CategoryID",
                              "name": "CategoryIDLabel",
                              "style": {
                                "width": "100%"
                              },
                              "text": "Product Category",
                              "type": "label"
                            }
                          ],
                          "type": "col"
                        },
                        {
                          "class": "col-md-9",
                          "components": [
                            {
                              "data": "${getProductCategoriesResult}",
                              "name": "CategoryID",
                              "placeholder": "Choose ProductCategory",
                              "style": {
                                "display": "block",
                                "width": "100%"
                              },
                              "textProperty": "CategoryName",
                              "type": "dropdown",
                              "value": "${product.CategoryID}",
                              "valueProperty": "CategoryID",
                              "valueType": "int"
                            },
                            {
                              "component": "CategoryID",
                              "defaultValue": "0",
                              "name": "CategoryIDRequiredValidator",
                              "style": {
                                "position": "absolute"
                              },
                              "text": "CategoryID is required",
                              "type": "required-validator"
                            }
                          ],
                          "type": "col"
                        }
                      ],
                      "style": {
                        "marginBottom": "1rem"
                      },
                      "type": "row"
                    },
                    {
                      "components": [
                        {
                          "class": "col-md-3",
                          "components": [
                            {
                              "component": "ProductName",
                              "name": "ProductNameLabel",
                              "style": {
                                "width": "100%"
                              },
                              "text": "Product Name",
                              "type": "label"
                            }
                          ],
                          "type": "col"
                        },
                        {
                          "class": "col-md-9",
                          "components": [
                            {
                              "maxLength": 150,
                              "name": "ProductName",
                              "style": {
                                "display": "block",
                                "width": "100%"
                              },
                              "type": "textbox",
                              "value": "${product.ProductName}",
                              "valueType": "string"
                            },
                            {
                              "component": "ProductName",
                              "name": "ProductNameRequiredValidator",
                              "style": {
                                "position": "absolute"
                              },
                              "text": "ProductName is required",
                              "type": "required-validator"
                            }
                          ],
                          "type": "col"
                        }
                      ],
                      "style": {
                        "marginBottom": "1rem"
                      },
                      "type": "row"
                    },
                    {
                      "components": [
                        {
                          "class": "col-md-3",
                          "components": [
                            {
                              "component": "Price",
                              "name": "PriceLabel",
                              "style": {
                                "width": "100%"
                              },
                              "text": "Price",
                              "type": "label"
                            }
                          ],
                          "type": "col"
                        },
                        {
                          "class": "col-md-9",
                          "components": [
                            {
                              "name": "Price",
                              "style": {
                                "display": "block",
                                "width": "100%"
                              },
                              "type": "numeric",
                              "value": "${product.Price}",
                              "valueType": "decimal"
                            },
                            {
                              "component": "Price",
                              "name": "PriceRequiredValidator",
                              "style": {
                                "position": "absolute"
                              },
                              "text": "Price is required",
                              "type": "required-validator"
                            }
                          ],
                          "type": "col"
                        }
                      ],
                      "style": {
                        "marginBottom": "1rem"
                      },
                      "type": "row"
                    },
                    {
                      "components": [
                        {
                          "class": "col-md-3",
                          "components": [
                            {
                              "component": "Picture",
                              "name": "PictureLabel",
                              "style": {
                                "width": "100%"
                              },
                              "text": "Picture",
                              "type": "label"
                            }
                          ],
                          "type": "col"
                        },
                        {
                          "class": "col-md-9",
                          "components": [
                            {
                              "name": "fileInput0",
                              "type": "file-input",
                              "value": "${product.Picture}"
                            },
                            {
                              "component": "fileInput0",
                              "name": "requiredValidator0",
                              "text": "Picture is required",
                              "type": "required-validator"
                            }
                          ],
                          "type": "col"
                        }
                      ],
                      "style": {
                        "marginBottom": "1rem"
                      },
                      "type": "row"
                    },
                    {
                      "components": [
                        {
                          "class": "col offset-sm-3",
                          "components": [
                            {
                              "buttonStyle": "primary",
                              "buttonType": "submit",
                              "icon": "save",
                              "text": "Save",
                              "type": "button"
                            },
                            {
                              "buttonStyle": "light",
                              "events": {
                                "click": [
                                  {
                                    "type": "close-popup"
                                  }
                                ]
                              },
                              "style": {
                                "marginLeft": "1rem"
                              },
                              "text": "Cancel",
                              "type": "button"
                            }
                          ],
                          "type": "col"
                        }
                      ],
                      "type": "row"
                    }
                  ],
                  "data": "${product}",
                  "events": {
                    "submit": [
                      {
                        "error": [
                          {
                            "detail": "Unable to create new Product!",
                            "severity": "error",
                            "summary": "Error",
                            "type": "notify"
                          }
                        ],
                        "name": "ConData.createProduct",
                        "parameters": [
                          {
                            "name": "Product",
                            "value": "${product}"
                          }
                        ],
                        "then": [
                          {
                            "result": "${product}",
                            "type": "close-popup"
                          }
                        ],
                        "type": "invoke"
                      }
                    ]
                  },
                  "itemType": "Novorfay.Models.ConData.Product",
                  "name": "form0",
                  "type": "template-form",
                  "visible": "${product != null}"
                }
              ],
              "type": "col"
            }
          ],
          "type": "row"
        }
      ],
      "container": "main",
      "type": "content"
    }
  ],
  "events": {
    "load": [
      {
        "name": "ConData.getProductCategories",
        "parameters": [],
        "then": [
          {
            "name": "getProductCategoriesResult",
            "type": "set",
            "value": "${result.Value.AsODataEnumerable()}",
            "valueType": "IEnumerable<Novorfay.Models.ConData.ProductCategory>"
          }
        ],
        "type": "invoke"
      },
      {
        "name": "product",
        "type": "set",
        "value": "new Novorfay.Models.ConData.Product(){}",
        "valueType": "Novorfay.Models.ConData.Product"
      }
    ]
  },
  "layout": "Main",
  "name": "Add Product"
}